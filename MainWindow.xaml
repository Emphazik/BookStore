                        <Button Content="Добавить в корзину" Width="200" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="10" Padding="10" Background="White">
